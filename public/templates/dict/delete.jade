
.modal.fade.dict-delete(data-view = "delete", data-type = "modal", role = "dialog", tabindex = "-1")
  .modal-dialog
    .modal-content
      .modal-header(data-view = "modal-header")
        button.close(type = "button", data-dismiss = "modal", aria-hidden = "true") &times;     
        h4.modal-title #{gettext('Delete record')}

      .modal-body(data-view = "modal-body")
        p #{gettext('Yes or No?')}
          
      .modal-footer(data-view = "modal-footer")
        button.btn.btn-danger(data-view = "button", type = "button") #{gettext('Delete record')}
        button.btn.btn-default(type = "button", data-dismiss = "modal") #{gettext('Cancel delete record')}

      .modal-body(data-view = "modal-bottom")
