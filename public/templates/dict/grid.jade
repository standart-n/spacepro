

#content.col-sm-11.col-lg-10

  .row

    .col-md-12
      form.form-inline
        .form-group.col-xs-12.col-md-6.col-lg-4
          input.form-control(type = "search", placeholder = "search")
        a.btn(href = "#") button

    //- #main

    //- #bottom

  .row

    .col-md-12

      #main(data-view = "dict", data-dict-type = "parent", data-dict-sid = "#{parentDict.sid}", data-dict-child = "#{childDict.sid}")
        //- .container
        //-   .row
        //-     .col-md-12

        table.table.table-condensed.table-striped.table-hover.dict
          thead
            tr
              - each column in parentDict.columns
                th(class = "#{column.HiddenClass}") #{column.Caption}

          tbody
            - each line, index in parentDict.data
              tr(data-uuid = "#{line.d$uuid}")
                - each column in parentDict.columns
                  td(class = "#{column.HiddenClass}", data-col-field = "#{column.Field}")
                    - if ((line[column.Field] != null) && (line[column.Field] !== ''))
                      - if (parentDict.fields[column.Field].mtype == 'timestamp')
                        span #{moment(line[column.Field]).format('DD.MM.YYYY')}
                        &nbsp;
                        small #{moment(line[column.Field]).format('HH:mm')}
                      - else
                        span #{line[column.Field]}
                    //- - else
                    //-   span none




