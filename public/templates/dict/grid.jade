
#content.col-sm-11.col-lg-10

  .row
    .col-md-12
      ul.nav.nav-pills
        li.active
          a(href = "#dddd", data-toggle = "tab") 
            i(class = "fa fa-fw fa-lg #{parentDict.faIcon}")
            span.hidden-xs.hidden-sm #{parentDict.showcaption}
        - each child in parentDict.childs
          li
            a(href = "##{child.sid}", data-toggle = "tab") 
              i(class = "fa fa-fw fa-lg #{child.faIcon}")
              span.hidden-xs.hidden-sm #{child.showcaption}

      .tab-content
        .tab-pane.active(id = "dddd", data-view = "dict", data-dict-type = "parent", data-dict-sid = "#{parentDict.sid}")

          include insert

          br
          .row
            .col-md-12
              form.form-inline(data-view = "search")
                - if (parentDict.toolbar.search === true)
                  .form-group.col-xs-12.col-md-6.col-lg-4
                    input.form-control(width = "100%", type = "search", placeholder = "search")
                - if (parentDict.toolbar.insert === true)
                  a.btn.btn-success(href = "#", data-action = "insert") 
                    i.fa.fa-plus
                    &nbsp;
                    span Добавить
                - if (parentDict.toolbar.remove === true)
                  &nbsp;
                  a.btn.btn-danger(href = "#", data-action = "delete_many") 
                    i.fa.fa-minus
                    &nbsp;
                    span Удалить

          .row

            .col-md-12

              table.table.table-condensed.table-striped.table-hover.dict
                thead
                  tr
                    th
                    - each column in parentDict.columns
                      th(class = "#{column.hidden_class}") #{column.caption}
                    th

                tbody

        - each child in parentDict.childs
          .tab-pane(id = "#{child.sid}", data-view = "dict", data-dict-type = "child", data-dict-sid = "#{child.sid}")
            br
            .row
              .col-md-12
                form.form-inline(data-view = "search")
                  - if (child.toolbar.search === true)
                    .form-group.col-xs-12.col-md-6.col-lg-4
                      input.form-control(type = "search", placeholder = "search")
                  - if (child.toolbar.insert === true)
                    a.btn.btn-success(href = "#") 
                      i.fa.fa-plus
                      &nbsp;
                      span Добавить
                  - if (child.toolbar.remove === true)
                    &nbsp;
                    a.btn.btn-danger(href = "#") 
                      i.fa.fa-minus
                      &nbsp;
                      span Удалить

            .row

              .col-md-12

                table.table.table-condensed.table-striped.table-hover.dict
                  thead
                    tr
                      th
                      -   each column in child.columns
                        th(class = "#{column.hidden_class}") #{column.caption}
                      th

                  tbody
