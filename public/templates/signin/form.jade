

.container.signin-container(data-view = "signin")

	.row

		.col-md-4.col-md-offset-4.col-xs-12


			form.signin-form(data-type = "form")
				h2.signin-form-heading Авторизация

				.alert.alert-danger.hide(data-type = "error")

				input.form-control.input-lg.signin-form-login(data-type = "login", type = "text", placeholder = "Логин")

				input.form-control.input-lg.signin-form-password(data-type = "password",type = "password", placeholder = "Пароль")

				button.btn.btn-primary.btn-lg.btn-block.signin-form-submit(data-type = "submit", type = "submit") Войти


